  },
  "jest": {
    "verbose": false,
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": [
      "<rootDir>/test/**/*.ts",
      "!**/test/util/**"
    ]
  },
  "devDependencies": {
    "@types/jest": "^29.2.5",
    "jest": "^29.3.1",
    "prettier": "^2.8.2",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.4"
  }
}
